@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<style>
    #loginContainer{
        /*border:solid 2px black;*/
        width:100%;
        display:flex;
        flex-direction:row;
    }
    #loginInputfields-Container{
        padding:50px;
        /*border-right:solid 2px black;*/
        width:40%;
        height:700px;
    }
    #fieldsLogin-Container{
        display: flex;
        flex-direction: column;
        margin-left: 0px;
        margin-bottom: 20px;
    }
    #fieldsLogin-Container{
    }
    #login-submit{
        margin-top:20px;
        display:block;
        margin-left:auto;
        margin-right:auto;
        padding-top:-10px;
        width: 150px;
        text-transform:uppercase;
    }
    #loginImgBck{
        width:60%;
        height:700px;
        overflow:hidden;
    }
    #login-ImgBck{
         width:100%;
        height:700px;
        overflow:hidden;
    }
</style>
<section id="loginContainer" class="">

    <div id="loginInputfields-Container">
        <h1 class="" style="padding-top:10px;margin-left:20px;">@ViewData["Title"]</h1>
        <hr />
        <form id="fieldsLogin-Container" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="fieldsLogin-Container" class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div id="fieldsLogin-Container" class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox" style="margin-top:0px;">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                    <p style="margin-top:10px;">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class=" btn btn-primary">Login</button>
            </div>

        </form>
    </div>

    <div id="loginImgBck">
        <img id="login-ImgBck" src="~/images/backgroundPots1.jpg"  />
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
