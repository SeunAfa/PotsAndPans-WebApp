@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change your password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<style>
    #inputFieldProfile-Container {
        display: flex;
        flex-direction: column;
        margin-left: 0px;
        margin-bottom: 10px;
    }

    #fieldsProfile-Container {
        width: 600px;
    }

    #update-profile-button {
        background-color: black;
        color: white;
    }
</style>
<div id="accountContainer" class="container-fluid">
    <div id="accountContainer-Info">
        <h2 class="text-dark">@ViewData["Title"]</h2>
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="profile-form" method="post">
            <div id="fieldsProfile-Container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

              <div id="inputFieldProfile-Container" class="form-floating">
                <input id="oldPasswordInput" asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div id="inputFieldProfile-Container" class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div id="inputFieldProfile-Container" class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            </div>

            <button id="update-profile-button" type="submit" class=" btn " onclick="return  preventPasswordEdit()">Update</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>

        function preventPasswordEdit() {
            //Currentt Password
            if (document.getElementById("oldPasswordInput").value == "User1234!") {

                var disabled = document.getElementById("oldPasswordInput").disabled;

                if (disabled) {

                    document.getElementById("oldPasswordInput").disabled = false;

                }

                else {

                    document.getElementById("oldPasswordInput").disabled = true;

                }

            }
           
        }

    </script>
}
