@model PotsAndPans.Models.Models.Company
<style>
#companyForm{
    display:block;
    margin-left:auto;
    margin-right:auto;
}
</style>
<a id="backBtn" asp-area="Admin" asp-controller="Company" asp-action="Index" style="text-decoration:none;margin-top:10px;margin-left:-5px;" class="text-black">
    <i class="bi bi-arrow-left"></i>Back
</a>
<div id="companyForm">
    <form  method="post" asp-action="Upsert" enctype="multipart/form-data">
     <input asp-for="Id" hidden />
    <div class="row ">
        <div class="col-12">
              <div class="border p-3 mt-4 row">
        <div class="col-12 pb-2">
            <h2 class="text-dark">@(Model.Id!=0?"Update ":"Create ")Company</h2>
            <hr />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="StreetAddress"></label>
            <input asp-for="StreetAddress" class="form-control"/>
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>
         <div class="mb-3 col-6">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control"/>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
         <div class="mb-3 col-6">
            <label asp-for="Borough"></label>
            <input asp-for="Borough" class="form-control"/>
            <span asp-validation-for="Borough" class="text-danger"></span>
        </div>
         <div class="mb-3 col-6">
            <label asp-for="PostCode"></label>
            <input asp-for="PostCode" class="form-control"/>
            <span asp-validation-for="PostCode" class="text-danger"></span>
        </div>
        
       <div class="col-12 text-center" style="padding:50px;">
          @if (Model.Id != 0)
            {
                            <button type="submit" class="btn " style="width:150px;background-color:black;color:white;">Update</button>
            }
            else
            {
                            <button type="submit" class="btn " style="width:150px;background-color:black;color:white;">Create</button>
            }
       </div>
    </div>
        </div>
    </div>
</form>
</div>
<!--ClientSide Validation-->
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}